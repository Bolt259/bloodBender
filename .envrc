#!/usr/bin/env bash
# direnv configuration for automatic Nix development environment

# Use Nix flake
if command -v nix &> /dev/null && [ -f flake.nix ]; then
  use flake
  
  # Load .env file if it exists
  if [ -f .env ]; then
    dotenv .env
  fi
  
  echo "✅ Nix development environment activated"
else
  echo "⚠️  Nix not found or flake.nix missing"
  echo "   Install Nix: https://nixos.org/download.html"
  echo "   Or use: source bloodBath-env/bin/activate"
fi
